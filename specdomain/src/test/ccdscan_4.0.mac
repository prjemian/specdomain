def _ccd_delay_trig '
     # trigger the camera with delay generator as the setup in 8ID
    global CCD_N
    CCD_N = epics_get(sprintf("%s.FrameBuffer",CCDPV));
    epics_put(pvDELAY_CTL,1);
    sleep(0.01);
    epics_put(pvDELAY_CTL,0);
'
